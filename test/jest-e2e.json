{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "..",
    "testMatch": [
        "**/*.e2e-spec.ts"
    ],
    "testPathIgnorePatterns": [
        "/node_modules/",
        "/src/"
    ],
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageReporters": [
        "json",
        "lcov"
    ],
    "coverageDirectory": "coverage/e2e",
    "collectCoverageFrom": [
        "src/**"
    ],
    "coveragePathIgnorePatterns": [
        ".module.ts$",
        ".spec.ts$"
    ],
    "testEnvironment": "node",
    "testTimeout": 30000
}