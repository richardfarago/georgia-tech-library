{
    "name": "georgia-tech-library",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "engines": {
        "node": ">=12.0.0",
        "npm": ">=6.0.0"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "watch": "nest build --webpack --webpackPath webpack-hmr.config.js --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:e2e:cov": "jest --config ./test/jest-e2e.json --coverage",
        "test:combined:cov": "ts-node ./merge-coverage.ts --report ./coverage/unit/coverage-final.json --report ./coverage/e2e/coverage-final.json",
        "cov": "npm run test:cov && npm run test:e2e:cov && npm run test:combined:cov",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "test:e2e:watch": "jest --config ./test/jest-e2e.json --watch"
    },
    "dependencies": {
        "@golevelup/nestjs-testing": "^0.1.2",
        "@nestjs/common": "^7.6.15",
        "@nestjs/config": "^1.0.0",
        "@nestjs/core": "^7.6.15",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/mapped-types": "*",
        "@nestjs/passport": "^8.0.0",
        "@nestjs/platform-express": "^7.6.15",
        "@nestjs/swagger": "4.8.2",
        "@nestjs/typeorm": "^8.0.1",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "fs-extra": "^10.0.0",
        "isbn-validate": "^1.0.3",
        "istanbul-api": "^3.0.0",
        "jest-extended": "^0.11.5",
        "lodash": "^4.17.21",
        "moment": "^2.29.1",
        "mssql": "^7.1.3",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "randexp": "^0.5.3",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "sinon": "^11.1.2",
        "swagger-ui-express": "^4.1.6",
        "tedious": "^11.2.0",
        "typeorm": "^0.2.34",
        "typeorm-naming-strategies": "^2.0.0",
        "uuid": "^8.3.2",
        "yargs": "^17.0.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.6.0",
        "@nestjs/schematics": "^7.3.0",
        "@nestjs/testing": "^7.6.18",
        "@types/express": "^4.17.11",
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.36",
        "@types/passport-jwt": "^3.0.6",
        "@types/passport-local": "^1.0.34",
        "@types/sinon": "^10.0.2",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "eslint": "^7.22.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "run-script-webpack-plugin": "0.0.11",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.4",
        "ts-loader": "^8.0.18",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.3",
        "webpack": "^5.44.0",
        "webpack-node-externals": "^3.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "moduleNameMapper": {
            "^src/(.*)$": "<rootDir>/$1"
        },
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage/unit",
        "collectCoverageFrom": [
            "**/*.controller.(t|j)s",
            "**/*.service.(t|j)s"
        ],
        "coverageReporters": [
            "json",
            "lcov",
            "text"
        ],
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "jest-extended"
        ],
        "testTimeout": 30000
    }
}